{
    "Comment": "Simple content approval workflow state machine example",
    "StartAt": "CheckForUnapprovedWords",
    "States": {
        "CheckForUnapprovedWords": {
            "Type": "Task",
            "Resource": "${CheckForUnapprovedWordsFunction.Arn}",
            "Next": "SendRequestForApproval",
            "Catch": [
                {
                    "ErrorEquals": [
                        "unapprovedWords"
                    ],
                    "ResultPath": "$.errorInfo",
                    "Next": "ReplyWithAnswer"
                }
            ]
        },
        "SendRequestForApproval": {
            "Type": "Task",
            "Resource": "arn:aws:states:::lambda:invoke.waitForTaskToken",
            "Parameters": {
                "FunctionName": "${SendRequestForApprovalFunction.Arn}",
                "Payload": {
                    "requester.$": "$.requester",
                    "content.$": "$.content",
                    "token.$": "$$.Task.Token"
                }
            },
            "ResultPath": "$.output",
            "Next": "ReplyWithAnswer",
            "Catch": [
                {
                    "ErrorEquals": [
                        "rejected"
                    ],
                    "ResultPath": "$.output",
                    "Next": "ReplyWithAnswer"
                }
            ]
        },
        "ReplyWithAnswer": {
            "Type": "Task",
            "Resource": "${ReplyWithAnswerFunction.Arn}",
            "End": true
        }
    }
}